<div class="container">
  <div class="row title">
    <h1 class="text-white title mt-4 full-width text-center">관리자 로그인</h2>
  </div>
  <div class="row">
    <h6 class="text-white full-width text-center mt-2">로그인하시면 데이터를 수정하실 수 있습니다.</h6>
  </div>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, required: true, autofocus: true, class: "form-control", placeholder: "이메일" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, required: true, class: "form-control", placeholder: "비밀번호" %>
    </div>
  
    <div class="form-group">
      <%= f.submit "로그인", class: "btn btn-lg btn-warning"  %>
    </div>
  <% end %>
  
</div>