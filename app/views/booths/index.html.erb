<style>  
  img{
    width:50px;
  }
  .booth_search{
    padding-top:60px; 
  }
  <style>  
#bb_table { border-collapse:collapse; }  
#bb_table th, #tt_table td, #tt_table tr { border:1px solid black; }
#bb_table th {padding: 0 20px 0 10px;}
#bb_table td {padding-left:10px;}
</style>
</style>

<p id="notice"><%= notice %></p>

<%= search_form_for @search do |f| %>
  <div class = "field">
    <%= f.label :title_cont, "부스 이름으로 검색" %>   <!--부스 이름(title)로 검색-->
    <%= f.text_field :title_cont %>
  </div>
  <div class ="actions"><%= f.submit "검색" %></div>
<% end %>


<h1>Listing Booths</h1>

<table id="bb_table">
  <thead>
    <tr>
      <th>24일</th>
      <th>25일</th>
      <th>26일</th>
      <th>부스/주점</th>
      <th>부스/주점 이름</th>
      <th>구역</th>
      <th>학과/동아리 이름</th>
      <th>첨부사진</th>
      <th>태그목록</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @booths.each do |booth| %>
      <tr>
        <td><%= booth.sche %></td>
        <td><%= booth.sche_2 %></td>
        <td><%= booth.day3 %></td>
        <td><%= booth.choose %></td>
        <td><%= booth.title %></td>
        <td><%= booth.area %></td>
        <td><%= booth.name %></td>
        <td><%= image_tag(booth.image.url)%></td>
        <td><%= tag_icons booth.tag_list %></td>
        <td><%= link_to 'Show', booth %></td>
        <td><%= link_to 'Edit', edit_booth_path(booth) %></td>
        <td><%= link_to 'Destroy', booth, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


